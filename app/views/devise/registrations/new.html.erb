
<div class="contents-row">
  <div class="container">
    <div class="title">
    <p>Join us!</p>
    </div>
    <div class="form"> 
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'devise/shared/error_messages', model: @user %>
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_area :nickname, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
        </div>
      </div>
      <div class="field">お住まいの島
          <%= f.collection_select(:island_id, Island.all, :id, :name, {}, {class:"select-box", id:"user-island"}) %>
      </div>
      <div class="actions">
        <input type="submit" name="commit" value="Register" data-disable-with="Register">
      </div>
      
    </div>
    <% end %>
  </div>
</div>